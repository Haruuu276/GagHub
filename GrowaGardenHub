-- Services
local TweenService = game:GetService("TweenService")
local Players = game:GetService("Players")

-- Setup GUI
local player = Players.LocalPlayer
local gui = Instance.new("ScreenGui")
gui.Name = "LoadingScreen"
gui.ResetOnSpawn = false
gui.IgnoreGuiInset = true
gui.Parent = player:WaitForChild("PlayerGui")

-- Background (black now)
local bg = Instance.new("Frame")
bg.BackgroundColor3 = Color3.fromRGB(0, 0, 0) -- changed to black
bg.Size = UDim2.new(1, 0, 1, 0)
bg.Parent = gui

-- Loading Text
local loadingText = Instance.new("TextLabel")
loadingText.Text = "ðŸŒ± Loading Garden... 0%"
loadingText.TextColor3 = Color3.new(1, 1, 1)
loadingText.Font = Enum.Font.FredokaOne
loadingText.TextScaled = true
loadingText.Size = UDim2.new(0.6, 0, 0.1, 0)
loadingText.Position = UDim2.new(0.2, 0, 0.35, 0)
loadingText.BackgroundTransparency = 1
loadingText.Parent = bg

-- Progress Bar Background
local barBG = Instance.new("Frame")
barBG.Size = UDim2.new(0.6, 0, 0.05, 0)
barBG.Position = UDim2.new(0.2, 0, 0.5, 0)
barBG.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
barBG.BorderSizePixel = 0
barBG.Parent = bg

-- Progress Bar Fill
local barFill = Instance.new("Frame")
barFill.Size = UDim2.new(0, 0, 1, 0)
barFill.BackgroundColor3 = Color3.fromRGB(80, 200, 120)
barFill.BorderSizePixel = 0
barFill.Parent = barBG

-- Timing configuration
local totalTime = 120 -- 2 minutes
local updateRate = 0.5 -- update every 0.5 seconds
local steps = totalTime / updateRate

-- Fill bar and update % over time
for i = 1, steps do
	local percent = i / steps
	barFill.Size = UDim2.new(percent, 0, 1, 0)
	loadingText.Text = string.format("ðŸŒ± Loading Garden... %d%%", percent * 100)
	wait(updateRate)
end

-- Tween to ensure 100%
local tween = TweenService:Create(barFill, TweenInfo.new(0.5), {Size = UDim2.new(1, 0, 1, 0)})
tween:Play()
wait(1)

-- Fade out
local fadeTween = TweenService:Create(bg, TweenInfo.new(1), {BackgroundTransparency = 1})
fadeTween:Play()
fadeTween.Completed:Connect(function()
	gui:Destroy()
end)
