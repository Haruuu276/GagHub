local loadingScreen = script.Parent
local background = loadingScreen:WaitForChild("Background")
local seedImage = background:WaitForChild("SeedImage")
local loadingText = background:WaitForChild("LoadingText")

local TweenService = game:GetService("TweenService")

local function updateProgressBar(progress)
    loadingText.Text = "Loading Garden... " .. math.floor(progress) .. "%"
    
    -- simulate growth by scaling the seed image
    seedImage.Size = UDim2.new(0, 100, 0, 100 + progress) -- stretch as it "grows"
end

local function simulateLoading()
    for i = 1, 100, 5 do
        updateProgressBar(i)
        wait(0.1) -- simulate delay
    end
    
    -- When loading is done, grow it into a plant
    local growTween = TweenService:Create(seedImage, TweenInfo.new(1), {
        Size = UDim2.new(0, 150, 0, 200),
        ImageColor3 = Color3.fromRGB(34, 139, 34)
    })
    growTween:Play()
    
    wait(1.5)
    loadingScreen:Destroy() -- remove loading screen
end

simulateLoading()
